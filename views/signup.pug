doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(href='/images/favicon.png' rel='icon')
        link(rel='stylesheet' href='/stylesheets/website.css')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
        link(href='https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Cairo:wght@300&family=Open+Sans&display=swap' rel='stylesheet')
        title Sign-up
    body

        img#heading-logo(src='/images/website-logo.png' alt='Home')
        #signup-form-div
            form#signup-form(action='/auth/signup' method='post')
                h4 Create Account
                label Username
                br
                input#username-entry(type='text' placeholder='Enter Username' name='username' required)
                br
                label Password
                br
                input#password-entry(type='password' placeholder='Enter Password' name='password' required)
                br
                label Favourite Genres
                input#genre1(type='text' placeholder='Ex. Action' name='g1' required)
                input#genre2(type='text' placeholder='Ex. Comedy' name='g2' required)
                input#genre3(type='text' placeholder='Ex. Romance' name='g3' required)
                button#sign-up-button(type='submit') Create Account
                p
                    | Already have an account?
                    a(href='/signin.html') Log in here
        include navbar
        include footer
        script(src='/scripts/client.js')
